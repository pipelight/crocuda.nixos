# Ai shortcut
function hey;
  mods -f "$argv"
end
function ho;
  mods -m deepseek-r1 -f "$argv"
end

# Terminal multiplexer
# fish function
function ze;
  zellij attach $argv --force-run-commands;
end
export ze

