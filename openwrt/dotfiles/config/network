# Network configuration for sfr provider

config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fd31:34b5:b71e::/48'

config device
	option name 'br-lan'
	option type 'bridge'
	list ports 'eth0.1'

config interface 'lan'
	option device 'br-lan'
	option proto 'static'
	option ipaddr '192.168.1.1'
	option netmask '255.255.255.0'
	option ip6assign '60'

config device
	option name 'eth0.2'
  # Spoof original box mac address
	# option macaddr 'f8:5e:3c:1e:94:63'
  option macaddr 'e4:5d:51:b0:b3:60'

config interface 'wan'
	option device 'eth0.2'
	option proto 'dhcp'
	option vendorid 'neufbox_NB6VAC-FXC-r0'
	option clientid '00030001E45D51B0B360'

config interface 'wan6'
	option device 'eth0.2'
	option proto 'dhcpv6'
	option vendorid 'neufbox_NB6VAC-FXC-r0'
	option clientid '00030001E45D51B0B360'

config switch
	option name 'switch0'
	option reset '1'
	option enable_vlan '1'

config switch_vlan
	option device 'switch0'
	option vlan '1'
	option ports '0 1 2 3 6t'

config switch_vlan
	option device 'switch0'
	option vlan '2'
	option ports '4 6t'

